#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next && ~/.config/bspwm/titlebars.sh

super + b
	bspc desktop -B && ~/.config/bspwm/titlebars.sh

super + {s,f}
	bspc window -t {floating,fullscreen} && ~/.config/bspwm/titlebars.sh

# super + {grave,Tab}
# 	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest && ~/.config/bspwm/titlebars.sh

super + shift + {Left,Down,Up,Right}
	bspc window -s {left,down,up,right}  && ~/.config/bspwm/titlebars.sh || bspc window -m last && ~/.config/bspwm/titlebars.sh

super + {Left,Down,Up,Right}
	bspc window -f {left,down,up,right} || bspc monitor -f last

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}  && ~/.config/bspwm/titlebars.sh

super + ctrl + {comma,period}
  bspc desktop -R {270,90}  && ~/.config/bspwm/titlebars.sh


super + {_,shift + }Tab
	bspc desktop -f {next,prev}.occupied  && ~/.config/bspwm/titlebars.sh

super + ctrl + {Left,Down,Up,Right}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {Left,Down,Up,Right}
	bspc window -e {right -30,down +30,down -30,right +30}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10} && ~/.config/bspwm/titlebars.sh

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner} && OLDEST_PID=$(pgrep -o 'lemonbar'); test $OLDEST_PID && pgrep 'lemonbar' | grep -vw $OLDEST_PID | xargs -r kill

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u && ~/.config/bspwm/titlebars.sh

#
# wm independent hotkeys
#

super + Return
	gnome-terminal

super + shift + Return
	firefox

# Media
XF86AudioRaiseVolume
 	pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume
 	pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute
 	pactl set-sink-mute 0 toggle # mute sound

XF86AudioPlay
 	playerctl play-pause
XF86AudioNext
 	playerctl next
XF86AudioPrev
 	playerctl previous

Print
	scrot -e 'mv $f ~/screenshots'

super + space
	dmenu_extended_run

super + Escape
	sleep 0.5 && xset dpms force off

super + r
	pkill -USR1 redshift

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd
